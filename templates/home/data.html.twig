                    <td>{{ person.lastname|upper }}</td>
                    <td>{{ person.age }}</td>
                    <td><img src="images/{{ asset(person.image) }}" width="60"/></td> 
                    {# <td><img src="{{ asset('images/'~person.image) }}"  class="rounded" width="60"/></td> #}
                    {# <td><a href="/item/{{ person.id }}">Afiicher</a></td> #}
                    <td><a href="{{ path('person_item', {id:person.id}) }}">Afficher</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
     {% endblock %}