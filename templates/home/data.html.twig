{% extends 'base.html.twig' %}
{% block stylesheets %}
 
{% endblock %}
{% block title %}Donnees de personne{% endblock %}
    {% block body %}
    <div class="container">
        {% include 'home/banner.html.twig' %}
        <h1>Liste des personnes</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Pr√©nom</th>
                    <th>Nom</th>
                    <th>Age</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for person in personnes  %}
                
                <tr>
                    <td>{{ person.id }}</td>
